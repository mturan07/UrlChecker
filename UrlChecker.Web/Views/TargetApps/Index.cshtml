@model IEnumerable<UrlChecker.Web.Models.TargetApp>

@{
    ViewData["Title"] = "Index";
}

<h3>Target Apps List</h3>

<br />

<p>
    <a class="btn btn-primary" asp-action="Create">Add New App</a>
</p>


@if (Model.Count() == 0)
{
    <div class="alert alert-info" role="alert">
        No data to display
    </div>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AppName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AppUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Interval)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>


            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AppName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AppUrl)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Interval)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm">Edit</a> |
                        @*<a asp-action="Details" asp-route-id="@item.Id"  class="btn btn-success btn-sm">Details</a> |*@
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }


        </tbody>
    </table>
}